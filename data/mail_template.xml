<odoo>
    <data noupdate="0">
        <record id="library_card_email_template" model="mail.template">
            <field name="name">Library Card: Send by email</field>
            <field name="model_id" ref="do_an_tn.model_lib_card"/>
            <field name="email_from">duyutc08121998@gmail.com</field>
            <field name="email_to">${object.email}</field>
            <field name="subject">Library School: Card ID: (Ref ${object.name_seq})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        <h3>Dear ${object.gt_name},</h3>
                        <br />
                        This is a email from Library School.
                        <br/>
                        <table style="text-align:left">
                            <tr>
                                <th>
                                    Card ID :
                                </th>
                                <td>
                                    ${object.name_seq}
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Doc limit:
                                </th>
                                <td>
                                    ${object.book_limit} (book) and ${object.syllabus_limit} (syllabus)
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Start Date:
                                </th>
                                <td>
                                    ${object.start_date.strftime('%d-%m-%Y')}
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    End Date:
                                </th>
                                <td>
                                     ${object.end_date.strftime('%d-%m-%Y')}
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Price:
                                </th>
                                <td>
                                    ${format_amount(object.price, object.currency_id)}
                                </td>
                            </tr>
                        </table>
                    </p>
                </div>
            </field>
            <field name="report_template"/>
            <field name="report_name">Library Card_${(object.name_seq)}</field>
        </record>

        <!--send email for card will be expire-->
        <record id="lib_card_send_email_expire" model="mail.template">
            <field name="name">Send Email for Card will be expire</field>
            <field name="model_id" ref="do_an_tn.model_lib_card"/>
            <field name="email_from">duyutc08121998@gmail.com</field>
            <field name="email_to">${object.email}</field>
            <field name="subject">Library Card Notice: (Ref ${object.name_seq})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.gt_name}
                        <br />
                        <br />
                        This is a email from Library School.
                        Card ID's : ${object.name_seq}
                        <br/>
                        End Date Card : ${object.end_date.strftime('%d-%m-%Y')}
                        <br/>
                        The card of you will be expire on ${object.end_date.strftime('%d-%m-%Y')}.
                    </p>
                </div>
            </field>
            <field name="report_template"/>
            <field name="report_name">Library Card_${(object.name_seq)}</field>
        </record>

        <record id="lib_checkout_send_by_email" model="mail.template">
            <field name="name">Send by email to reader</field>
            <field name="model_id" ref="do_an_tn.model_lib_checkout_bh_send_email"/>
            <field name="email_from">duyutc08121998@gmail.com</field>
            <field name="email_to">${object.email}</field>
            <field name="subject">${object.message_subject}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        This is a email from Library School.
                        <h5>Checkout ID: ${object.checkout_id.name_seq</h5>
                        <p>${object.message_body}</p>
                    </p>
                </div>
            </field>
        </record>

        <record id="scheduled_send_mail_chk_overdue" model="mail.template">
            <field name="name">Send by email to checkout overdue</field>
            <field name="model_id" ref="do_an_tn.model_lib_checkout_back_home"/>
            <field name="email_from">duyutc08121998@gmail.com</field>
            <field name="email_to">${object[0].email}</field>
            <field name="subject">Library School Notice</field>
            <field name="body_html" type="html">
                <div>
                    <p>Your checkout ID: ${object.name_seq}</p>
                    <p>Your card ID: ${object.card_id.name_seq}</p>
                    <p>Return Appointment Date: ${object.return_date.strftime('%d-%m-%Y')}</p>
                </div>
            </field>
        </record>
    </data>
</odoo>