            <field name="subject">Thư viện trường Đại học ABC</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Đây là email được gửi từ thư viện trường Đại học ABC.
                        <h3>${object.message_subject}</h3>
                        <h5>Mã phiếu mượn: ${object.checkout_id.name_seq}</h5>
                        <p>${object.message_body}</p>
                    </p>
                </div>
            </field>
        </record>

