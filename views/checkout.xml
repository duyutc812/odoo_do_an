<odoo>
    <record id="view_tree_checkout" model="ir.ui.view">
        <field name="name">view.tree.checkout</field>
        <field name="model">library.checkout</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='done'"
                  decoration-muted="state=='draft'"
                  decoration-it="state=='running'"
                  decoration-danger="state=='fined'">
                <field name="name_seq"/>
                <field name="request_date"/>
                <field name="return_date"/>
                <field name="card_id"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="borrow_book"/>
                <field name="state_card"/>
            </tree>
        </field>
    </record>

    <record id="view_form_checkout" model="ir.ui.view">
        <field name="name">view.form.checkout</field>
        <field name="model">library.checkout</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" invisible="1"/>
                    <button name="running" type="object"
                            string="Borrowed" class="oe_highlight"
                            attrs="{'invisible': [('state','!=', 'draft')]}"/>
                    <button name="done" type="object"
                            string="Returned" class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'running')]}"/>
                    <button name="lost_book" type="object"
                            string="Lost Book" class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'running')]}"/>
                    <field name="stage_id" widget="statusbar" class="oe_right"/><!--clickable="True"-->
                </header>
                <sheet>
                    <div class="oe_button_box" name="expense_button_box">
                            <button name="open_checkout_of_card"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-bars" attrs="{'invisible':[('state', '!=', 'running')]}">
                                    <field name="count" string="Another" widget="statinfo"/>
                            </button>
                    </div>
                    <div class="oe_title">
                        <label for="name_seq" class="oe_edit_only"/>
                        <h1>
                            <field name="name_seq"/>
                        </h1>
                        <h3>
                          <span class="oe_read_only">On </span>
                          <label for="request_date" class="oe_edit_only" />
                          <field name="request_date" class="oe_inline" />
                      </h3>
                    </div>
                    <group>
                        <separator string="Card Detail" colspan="4"/>
                        <group>
                            <field name="card_id" options="{'no_create':True}" />
                            <field name="limit_book_card" style="font-size:14px;color:#7C7BAD"/>
                            <field name="gt_name"/>
                            <field name="state_card"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="duration"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <separator string="Borrow Book"/>
                    <group col="2">
                        <group>
                            <field name="borrow_book"/>
                            <field name="return_date" attrs="{'invisible':[('state', '!=', 'done')]}"/>
                            <field name="user_id" options="{'no_open':True}"/>
                        </group>
                    </group>
                    <group>
                        <field name="note" attrs="{'invisible':[
                                           ('state', '!=', 'fined')]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_search_checkout" model="ir.ui.view">
       <field name="name">view.search.checkout</field>
       <field name="model">library.checkout</field>
        <field name="arch" type="xml">
            <search>
                <field name="name_seq" filter_domain="[('state','=', 'running')]" string="Checkout ID running"/>
                <field name="card_id" string="Card ID"/>
                <filter string="Draft" name="state_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Borrowed" name="state_running" domain="[('state', '=', 'running')]"/>
                <filter string="Returned" name="state_done" domain="[('state', '=', 'done')]"/>
                <filter string="Fined" name="state_fined" domain="[('state', '=', 'fined')]"/>
                <group>
                    <filter string="Card ID" name="card_id" context="{'group_by':'card_id'}"/>
                    <filter string="Book ID" name="borrow_book" context="{'group_by':'borrow_book'}"/>
                </group>
            </search>
       </field>
    </record>

