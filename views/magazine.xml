<odoo>
    <record id="view_form_magazine" model="ir.ui.view">
        <field name="name">view.form.magazine</field>
        <field name="model">library.magazine</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="expense_button_box">
                            <button name="toggle_active"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-archive">
                                    <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                    </div>
                    <!--<field name="image" widget="image" class="oe_avatar"/>-->
                    <!--<group col="4" colspan="4">
                        &lt;!&ndash;<group col="1" colspan="1">
                            <field name="image" class="oe_avatar" style="height: 200px;width: 100px;"
                                   widget="image" nolabel="1" />
                        </group>&ndash;&gt;
                        <group col="2" colspan="2">
                            <field name="type_mgz_new"/>
                            <field name="category_mgz" attrs="{'invisible':[('type_mgz_new','=','newspaper')]}"/>
                            <field name="category_new" attrs="{'invisible':[('type_mgz_new','=','magazine')]}"/>
                            <field name="num_magazine"/>
                            <field name="publish_date"/>
                        </group>
                        <group col="2" colspan="2">
                            <field name="quantity"/>
                            <field name="actually"/>
                            <field name="availability"/>
                        </group>

                    </group>-->
                    <!--<field name="image" widget="image" class="oe_avatar"/>-->
                    <div class="oe_title">
                        <!--<label for="type_mgz_new" class="oe_edit_only"/>-->
                        <h1 style="color:#7C7BAD">
                            <field name="type_mgz_new" widget="radio"/>
                        </h1>
                    </div>
                    <group col="4" colspan="4" >
                        <!--<group col="1" colspan="1">
                            <field name="image" class="oe_avatar" style="height: 200px;width: 100px;"
                                   widget="image" nolabel="1" />
                        </group>-->
                        <group col="2" colspan="2" string="Information">
                            <field name="type_mgz_new"/>
                            <field name="category_mgz" attrs="{'invisible':[('type_mgz_new','=','newspaper')]}"/>
                            <field name="category_new" attrs="{'invisible':[('type_mgz_new','=','magazine')]}"/>
                            <field name="num_magazine"/>
                            <field name="publish_date"/>
                        </group>
                        <group col="2" colspan="2" string="Others">
                            <field name="quantity"/>
                            <field name="actually"/>
                            <field name="availability"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Magazine and Newspaper">
                            <field name="mgz_new_ids">
                                <tree editable="bottom" decoration-success="is_available == 'available'"
                                                        decoration-danger="is_available == 'not_available'">
                                    <!-- editable="top" -->
                                    <field name="name_seq"/>
                                    <field name="status"/>
                                    <field name="is_available"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_kanban_magazine_newspaper" model="ir.ui.view">
        <field name="name">view_kanban_magazine_newspaper</field>
        <field name="model">library.magazine</field>
        <field name="arch" type="xml">
            <kanban>
            <field name="id"/>
            <field name="type_mgz_new"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_details">
                            <a type="open">
                                <t t-if="record.type_mgz_new.raw_value=='magazine'">
                                    <strong>Magazine: </strong>
                                    <span style="color:black"><field name="category_mgz"/></span>
                                    - No.<field name="num_magazine"/> -  <field name="publish_date"/>
                                </t>
                                <t t-else="">
                                    <strong>Newspaper: </strong>
                                    <span style="color:black"><field name="category_new"/></span>
                                    - No.<field name="num_magazine"/> -  <field name="publish_date"/>
                                </t>
                            </a>

                                <t t-set="red_or_black"
                                       t-value="record.availability.raw_value == 'not_available' ?
                                       'oe_kanban_text_red': '' "/>
                                    <p t-att-class="red_or_black">
                                        <field name="availability"/>
                                    </p>

                        </div>
                    </t>
                   <!-- <searchpanel>
                        <field name="type" string="Type"/>
                    </searchpanel>-->
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_tree_mgz_new" model="ir.ui.view">
        <field name="name">view.tree.magazine.newspaper</field>
        <field name="model">meta.magazinenewspaper</field>
        <field name="arch" type="xml">
            <tree decoration-success="is_available=='available'"
                  decoration-danger="is_available=='not_available'">
                <field name="name_seq"/>
                <field name="mgz_new_id"/>
                <field name="status"/>
                <field name="is_available"/>
            </tree>
        </field>
    </record>

</odoo>