(<odoo>
    <record id="view_tree_checkout_at_lib" model="ir.ui.view">
        <field name="name">view.tree.checkout.at.lib</field>
        <field name="model">library.checkout.at.lib</field>
        <field name="arch" type="xml">
            <tree
                  decoration-success="state == 'done'"
                  decoration-muted="state == 'draft'"
                  decoration-info="state == 'running'"
                  decoration-danger="state == 'fined'"
                  decoration-bf="state == 'lost'">
                <!--banner_route="/do_an_tn/checkout_mg_new"-->
                <field name="name_seq"/>
                <field name="card_id"/>
                <field name="borrow_date"/>
                <field name="return_date"/>
                <!--<field name="status_document"/>-->
                <field name="user_id"/>
                <field name="currency_id" invisible="1"/>
                <field name="price" string="Penalty Price" sum="Total Penalty Price"/>
                <field name="note"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_form_checkout_at_lib" model="ir.ui.view">
        <field name="name">view.form.checkout.at.lib</field>
        <field name="model">library.checkout.at.lib</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" invisible="1"/>
                    <button name="running_state"
                            type="object"
                            string="Confirm"
                            class="oe_highlight"
                            attrs="{'invisible':[('state', '!=', 'draft')]}"
                            />
                    <button name="draft_state"
                            type="object"
                            string="Draft"
                            class="oe_highlight"
                            attrs="{'invisible':[('state', '!=', 'running')]}"
                            /> <!---->
                    <button name="done_state"
                            type="object"
                            string="Return"
                            class="oe_highlight"
                            attrs="{'invisible':[('state', '!=', 'running')]}"/>
                    <button name="lost_document"
                            type="object"
                            string="Lost Document"
                            confirm="Lost Magazine or Newspaper? Are you sure ?"
                            class="oe_highlight"
                            attrs="{'invisible':['|', ('state', '!=', 'fined'), ('is_lost_doc', '=', True)]}"/>
                    <button name="fined_state"
                            type="object"
                            string="Penalty"
                            class="oe_highlight"
                            attrs="{'invisible':[('state', '!=', 'running')]}"/>
                    <button name="cancel_state"
                            type="object"
                            string="Cancel"
                            class="oe_highlight"
                            attrs="{'invisible':[('state', 'not in', ['lost', 'fined'])]}"/>
                    <button name="%(do_an_tn.action_wizard_modify_descrip_doc)d" string="Modify Description"
                            type="action"
                            attrs="{'invisible': [('state', 'in', ['running', 'lost'])]}"/>
                    <field name="stage_id"
                           widget="statusbar"
                           options="{'fold_field': 'fold'}"
                           /><!--options="{'fold_field': 'fold'}"-->
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name_seq" class="oe_edit_only" />
                        <h1>
                            <field name="name_seq" readonly="1"/>
                        </h1>
                        <h3>
                            <span class="oe_read_only">On </span>
                            <label for="borrow_date" class="oe_edit_only" />
                            <field name="borrow_date" class="oe_inline" readonly="1"
                                   attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        </h3>
                    </div>
                    <group col="2" colspan="4">
                        <group string="Card Details">
                           <!-- <separator string="Card Details"/>-->
                            <field name="card_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="state_card" readonly="1"/>
                            <field name="gt_name" readonly="1"/>
                            <field name="user_id" required="1"/>
                        </group>
                        <group string="Others" >
                            <field name="type_document"/>
                            <field name="book_id"
                                   attrs="{'invisible': [('type_document', '!=', 'book')]}"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="meta_book_id"
                                   attrs="{'invisible': [('type_document', '!=', 'book')]}"
                                   options="{'no_create': True}"/>
                            <field name="mgz_new_id" string="Title"
                                   options="{'no_create': True, 'no_open': True}"
                                   attrs="{'readonly':[('state','!=','draft')],
                                           'invisible': [('type_document', '!=', 'magazine')]}"/>
                                  <!-- attrs="{'readonly':[('state','!=','draft')]}"-->

                            <field name="meta_mgz_new_id" string="Meta mgz/new"
                                   options="{'no_create': True, 'no_open': True}"
                                   attrs="{'readonly':[('state','!=','draft')],
                                           'invisible': [('type_document', '!=', 'magazine')]}"/>
                                   <!--attrs="{'readonly':[('state','!=','draft')]}"-->
                            <field name="project_id"
                                   options="{'no_create': True, 'no_open': True}"
                                   attrs="{'invisible': [('type_document', '!=', 'project')]}"/>
                            <field name="meta_project_id"
                                   options="{'no_create': True, 'no_open': True}"
                                   attrs="{'invisible': [('type_document', '!=', 'project')]}"/>
                            <field name="status_document" />
                            <field name="price_doc" attrs="{'invisible': [('state', 'not in', ['fined', 'lost'])]}"/>
                            <field name="is_lost_doc" invisible="1"/>
                            <field name="return_date" attrs="{'invisible': [('state', 'in', ['draft', 'running'])]}"/>
                        </group>
                    </group>
                    <group string="Fined" attrs="{'invisible':[('state', 'not in', ['lost', 'fined'])]}">
                        <group>
                            <field name="currency_id"/>
                            <field name="price" widget="monetary"
                                   attrs="{'required': [('state', '=', 'fined')],
                                           'readonly': [('is_lost_doc', '=', True)]}"/>
                            <field name="note"
                                   attrs="{'readonly': [('is_lost_doc', '=', True)]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <!--<field name="message_follower_ids" widget="mail_followers"/>-->
                    <!--<field name="activity_ids" widget="mail_activity"/>-->
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_search_checkout_at_lib" model="ir.ui.view">
       <field name="name">view.search.checkout.at.lib</field>
       <field name="model">library.checkout.at.lib</field>
        <field name="arch" type="xml">
            <search>
                <field name="name_seq" string="Checkout ID"/>
                <filter string="Draft and Borrowed" name="draft_running_state"
                        domain="[('state','in', ['draft', 'running'])]"/>
                <filter string="Draft" name="draft_state" domain="[('state','=', 'draft')]"/>
                <filter string="Borrowed" name="running_state" domain="[('state','=', 'running')]"/>
                <filter string="Returned" name="done_state" domain="[('state','=', 'done')]"/>
                <filter string="Fined" name="fined_state" domain="[('state','=', 'fined')]"/>
                <filter string="Canceled" name="cancel_state" domain="[('state','=', 'cancel')]"/>
                <group>
                    <filter string="State" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Card ID" name="card_id" context="{'group_by': 'card_id'}"/>
                    <filter string="Borrow Date" name="borrow_date" context="{'group_by': 'borrow_date'}"/>
                </group>
            </search>
       </field>
    </record>

    <record id="view_kanban_chk_at_lib" model="ir.ui.view">
        <field name="name">view.kanban.chk.at.lib</field>
        <field name="model">library.checkout.at.lib</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong>
                                    <a type="open" class="o_text_overflow"><field name="name_seq"/></a>
                                </strong>

                                <!--<t t-set="red_or_black"
                                        t-value="record.state_card.raw_value == 'expire' ?
                                                'oe_kanban_text_red' : '' "/>
                                <li style="padding-left:20px" t-att-class="red_or_black">
                                    <field name="card_id"/>
                                    <t t-if="record.state_card.raw_value == 'expire'"> (Expire)</t>
                                </li>-->
                                <table style="font-size:11px">
                                    <tr>
                                        <th>
                                            Card ID:
                                        </th>
                                        <td>
                                            <field name="card_id"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            State Card:
                                        </th>
                                        <td>
                                            <field name="state_card"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            Title:
                                        </th>
                                        <td class="o_text_overflow">
                                            <t t-if="record.book_id.raw_value">
                                                <field name="book_id"/>
                                            </t>
                                            <t t-elif="record.mgz_new_id.raw_value">
                                                <field name="mgz_new_id"/>
                                            </t>
                                            <t t-else="record.project_id.raw_value">
                                                <field name="project_id"/>
                                            </t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            ID Doc:
                                        </th>
                                        <td>
                                            <t t-if="record.meta_book_id.raw_value">
                                                <field name="meta_book_id"/>
                                            </t>
                                            <t t-elif="record.meta_project_id.raw_value">
                                                <field name="meta_project_id"/>
                                            </t>
                                            <t t-else="record.meta_mgz_new_id.raw_value">
                                                <field name="meta_mgz_new_id"/>
                                            </t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            State:
                                        </th>
                                        <td>
                                            <field name="state"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>
                    <searchpanel>
                        <field name="card_id" string="Card ID" domain="[('state', '=', 'running')]"/>
                    </searchpanel>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>