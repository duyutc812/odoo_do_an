<odoo>
    <record id="view_tree_checkout_back_home" model="ir.ui.view">
        <field name="name">view.tree.checkout.back.home</field>
        <field name="model">library.checkout.back.home</field>
        <field name="arch" type="xml">
            <tree
                  decoration-success="state == 'done'"
                  decoration-muted="state == 'draft'"
                  decoration-info="state == 'running'"
                  decoration-danger="state in ['fined', 'lost']">
                <!--banner_route="/do_an_tn/checkout_mg_new"-->
                <field name="name_seq"/>
                <field name="card_id"/>
                <field name="borrow_date"/>
                <field name="return_date"/>
                <field name="actual_return_date"/>
                <field name="type_document"/>
                <field name="category_doc"/>
                <field name="user_id"/>
                <field name="currency_id" invisible="1"/>
                <field name="price_total" string="Penalty Price" sum="Total Penalty Price"/>
                <field name="note"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_form_checkout_back_home" model="ir.ui.view">
        <field name="name">view.form.checkout.back.home</field>
        <field name="model">library.checkout.back.home</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" invisible="1"/>
                    <button name="running_state"
                            type="object"
                            string="Confirm"
                            class="oe_highlight"
                            attrs="{'invisible':[('state', '!=', 'draft')]}"
                            />

                    <button name="draft_state"
                            type="object"
                            string="Draft"
                            class="oe_highlight"

                            /><!--attrs="{'invisible':[('state', '!=', 'running')]}"-->

                    <button name="done_state"
                            type="object"
                            string="Return"
                            class="oe_highlight"
                            attrs="{'invisible':[('state', '!=', 'running')]}"/>

                    <button name="fined_state"
                            type="object"
                            string="Penalty"
                            class="oe_highlight"
                            attrs="{'invisible':[('state', '!=', 'running')]}"/>

                    <button name="lost_document"
                            type="object"
                            string="Lost Document"
                            confirm="Lost Magazine or Newspaper? Are you sure ?"
                            class="oe_highlight"
                            attrs="{'invisible':[('state', '!=', 'fined')]}"/>

                    <button name="cancel_state"
                            type="object"
                            string="Cancel"
                            class="oe_highlight"
                            attrs="{'invisible':[('state', 'not in', ['lost', 'fined'])]}"/>

                    <button name="%(do_an_tn.action_wizard_modify_descrip_chk_bh)d" string="Modify Description"
                            type="action"
                            attrs="{'invisible': [('state', 'in', ['running', 'lost', 'cancel'])]}"/>

                    <button name="%(do_an_tn.action_wizard_extend_checkout_bh)d" string="Extend"
                            type="action"
                            attrs="{'invisible': [('state', '!=', 'running')]}"/>


                    <field name="stage_id"
                           widget="statusbar"
                           options="{'fold_field': 'fold'}"
                           /><!--options="{'fold_field': 'fold'}"-->
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="open_all_checkout_bh"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-bars" string="All checkout back home">
                        </button>

                        <button name="open_chk_document"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-bars">
                            <field name="count_doc" string="Count Document" widget="statinfo"/>
                        </button>

                        <button name="open_chk_syllabus"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-bars">
                            <field name="count_syl" string="Count Syllabus" widget="statinfo"/>
                        </button>

                        <button name="open_all_penalty_checkout"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-bars">
                            <field name="count_penalty" string="Penalty Checkout" widget="statinfo"/>
                        </button>

                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority" />
                            <field name="kanban_state" widget="state_selection" class="oe_right"/>
                        </h1>
                           <label for="name_seq" class="oe_edit_only" />
                        <h1>
                            <field name="name_seq" readonly="1" class="oe_inline"/>
                        </h1>
                        <h3>
                            <label for="borrow_date" class="oe_edit_only" />
                            <field name="borrow_date" class="oe_inline" readonly="1"
                                   attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        </h3>
                    </div>
                    <group col="2" colspan="4">
                        <separator string="Card Details" colspan="4"/>
                        <group>
                            <field name="card_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="state_card" readonly="1"/>
                            <field name="gt_name" readonly="1" invisible="1"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                            <field name="user_id" required="1"/>
                        </group>
                    </group>
                    <group string="Others">
                        <group>
                            <field name="type_document" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="book_id"
                                   attrs="{'invisible': [('type_document', '!=', 'book')],
                                           'required': [('type_document', '=', 'book')],
                                           'readonly': [('state', '!=', 'draft')]}"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="meta_book_id"
                                   attrs="{'invisible': [('type_document', '!=', 'book')],
                                           'required': [('type_document', '=', 'book')],
                                           'readonly': [('state', '!=', 'draft')]}"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="project_id"
                                   options="{'no_create': True, 'no_open': True}"
                                   attrs="{'invisible': [('type_document', '!=', 'project')],
                                           'required': [('type_document', '=', 'project')],
                                           'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="meta_project_id"
                                   options="{'no_create': True, 'no_open': True}"
                                   attrs="{'invisible': [('type_document', '!=', 'project')],
                                           'required': [('type_document', '=', 'project')],
                                           'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="document_term" readonly="1" string="Term"/>
                            <field name="category_doc"/> <!--       attrs="{'invisible': [('type_document', '!=', 'book')]}"-->
                            <field name="price_doc"/> <!-- attrs="{'invisible': [('state', 'not in', ['fined', 'lost'])]}"-->
                            <field name="status_document" />
                        </group>
                    </group>
                    <group string="Return Date">
                        <group>
                            <field name="return_date" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="actual_return_date" string="Actual Return Date" readonly="1"/>
                        </group>
                    </group>
                    <group string="Penalty" attrs="{'invisible': [('state', 'in', ['draft', 'running', 'done'])]}">
                        <group>
                            <field name="currency_id" invisible="1" readonly="1"/>
                            <field name="day_overdue" attrs="{'invisible': [('day_overdue', '=', 0)]}" readonly="1"/>
                            <field name="price_penalty_chk" string="Price Checkout"
                                   attrs="{'invisible': [('price_penalty_chk', '=', 0)]}"
                                   readonly="1"/>
                            <field name="price_penalty_doc" attrs="{'readonly': [('state', '=', 'lost')]}"/>
                        </group>
                        <group>
                            <field name="price_total" attrs="{'invisible': [('price_total', '=', 0)]}"/>
                            <field name="note" attrs="{'readonly': [('state', '=', 'lost')]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <!--<field name="message_follower_ids" widget="mail_followers"/>-->
                    <!--<field name="activity_ids" widget="mail_activity"/>-->
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_search_checkout_bh" model="ir.ui.view">
        <field name="name">view.search.checkout.bh</field>
        <field name="model">library.checkout.back.home</field>
        <field name="arch" type="xml">
            <search>
                <field name="card_id" string="Card ID"/>
                <field name="name_seq" string="Checkout ID"/>
                <field name="gt_name" string="User Name"/>
                <filter string="Syllabus" name="syllabus" domain="[('type_document', '=', 'book'),
                                                           ('category_doc', '=', 'Giáo Trình')]"/>
                <filter string="Document(not syllabus)" name="doc_not_syl" domain="[('category_doc', '!=', 'Giáo Trình')]"/>
                <filter string="Draft" name="draft_state" domain="[('state', '=', 'draft')]"/>
                <filter string="Borrowed" name="running_state" domain="[('state', '=', 'running')]"/>
                <filter string="Returned" name="done_state" domain="[('state', '=', 'done')]"/>
                <filter string="Fined" name="fined_state" domain="[('state', '=', 'fined')]"/>
                <filter string="Lost" name="lost_state" domain="[('state', '=', 'lost')]"/>
                <group>
                    <filter string="Card ID" name="card_id" context="{'group_by': 'card_id'}"/>
                    <filter string="State" name="state_group" context="{'group_by': 'state'}"/>
                    <filter string="Actual Return Date" name="actual_return_date" context="{'group_by': 'actual_return_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_kanban_chk_back_home" model="ir.ui.view">
        <field name="name">view.kanban.chk.back.home</field>
        <field name="model">library.checkout.back.home</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" group_create="false" quick_add="false">
                <field name="id"/>
                <field name="user_id"/>
                <field name="book_id"/>
                <field name="meta_book_id"/>
                <field name="project_id"/>
                <field name="meta_project_id"/>
                 <progressbar
                     field="kanban_state"
                     colors='{"overdue": "danger"}' sum_field="price_total"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <t t-if="record.state.raw_value=='draft'">
                                <div class="o_dropdown_kanban dropdown">
                                    <!-- Top-right drop down menu here... -->
                                    <a class="dropdown-toggle btn" data-toggle="dropdown" role="button" aria-label="Dropdown menu" title="Dropdown menu" href="#">
                                      <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t>
                                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                        </t>
                                    </div>
                                </div>
                            </t>
                            <div class="oe_kanban_content">
                                <!--<div>
                                    <strong class="o_kanban_record_title"><span style="color:#7C7BAD"><field name="name_seq"/> - <field name="gt_name"/></span></strong>
                                </div>
                                <div class="text-muted o_kanban_record_subtitle o_text_overflow" style="font-size:10px">
                                    <t t-if="record.price_total.raw_value!=0">
                                        <field name="currency_id" invisible="1"/>
                                        <field name="price_total" widget="monetary"/>
                                    </t>
                                </div>-->
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title"><b><span style="color:#7C7BAD"><field name="name_seq"/> - <field name="gt_name"/></span></b></strong>
                                    </div>
                                    <strong>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="price_total" widget="monetary"
                                               options="{'currency_field': 'currency_id'}"
                                               attrs="{'invisible': [('price_total', '=', 0)]}"/>
                                    </strong>
                                </div>
                                <div class="text-muted o_kanban_record_subtitle o_text_overflow" style="font-size:10px">
                                    <t t-if="record.book_id.raw_value"><t t-esc="record.book_id.value"/></t>
                                    <t t-if="record.project_id.raw_value"><t t-esc="record.project_id.value"/></t>
                                </div>
                                <div class="text-muted o_kanban_record_subtitle o_text_overflow" style="font-size:10px">
                                    <t t-if="record.book_id.raw_value"><t t-esc="record.meta_book_id.value"/></t>
                                    <t t-if="record.project_id.raw_value"><t t-esc="record.meta_project_id.value"/></t>
                                </div>
                                <!--<table style="font-size:10px" class="o_text_overflow">
                                    <tr>
                                        <th>
                                            Card ID:
                                        </th>
                                        <td>
                                            <field name="card_id"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            Title:
                                        </th>
                                        <td>
                                            <t t-if="record.book_id.raw_value">
                                                <field name="book_id"/>
                                            </t>
                                            <t t-else="record.project_id.raw_value">
                                                <field name="project_id"/>
                                            </t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            ID Doc:
                                        </th>
                                        <td class="o_text_overflow">
                                            <t t-if="record.meta_book_id.raw_value">
                                                <field name="meta_book_id"/>
                                            </t>
                                            <t t-elif="record.meta_project_id.raw_value">
                                                <field name="meta_project_id"/>
                                            </t>
                                        </td>
                                    </tr>
                                </table>-->
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority" readonly="1"/>
                                        <field name="kanban_state" widget="kanban_state_selection"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'running': 'success', 'fined': 'danger', 'lost': 'warning'}}"/>
                                        <img t-att-src="kanban_image('library.checkout.back.home', 'user_image', record.id.raw_value)"
                                             t-att-title="record.user_id.value"
                                             t-att-alt="record.user_id.value"
                                             width="30" height="30"
                                             class="oe_kanban_avatar"/>
                                    </div>
                                </div>
                            </div>
                        <div class="oe_clear"/>
                     </div> <!-- end of kanban color -->
                    </t>
                    <searchpanel>
                        <field name="card_id" string="Card ID" domain="[('state', '=', 'running')]"/>
                    </searchpanel>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_graph_chk_back_home" model="ir.ui.view">
        <field name="model">library.checkout.back.home</field>
        <field name="arch" type="xml">
            <graph type="bar">
                <!-- Fields used for the display text -->
                <field name="stage_id"/>
                <field name="currency_id" invisible="1"/>
                <field name="price_total" type="measure" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
            </graph>
        </field>
    </record>

    <record id="view_pivot_chk_at_lib" model="ir.ui.view">
        <field name="model">library.checkout.back.home</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="stage_id" type="col"/>
                <field name="card_id" />
                <field name="borrow_date" interval="week" />
                <field name="currency_id"/>
                <field name="price_total" type="measure" widget="monetary"/>
            </pivot>
      </field>
    </record>

</odoo>