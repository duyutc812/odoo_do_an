<odoo>
    <record id="view_tree_publisher" model="ir.ui.view">
        <field name="name">view.tree.publisher</field>
        <field name="model">library.publisher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name_seq"/>
                <field name="name"/>
                <field name="email"/>
                <field name="website"/>
            </tree>
        </field>
    </record>

    <record id="view_form_publisher" model="ir.ui.view">
        <field name="name">view.form.publisher</field>
        <field name="model">library.publisher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <separator string="Publisher"/>
                    <field name="publisher_image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h5>
                            <field name="name_seq" />
                        </h5>
                        <h1>
                            <label for="name" class="oe_edit_only"/>
                            <field name="name" placeholder="Publisher name..."/>
                        </h1>
                    </div>

                    <group col="2" colspan="2">
                        <separator string="Information" colspan="4"/>
                        <group>
                            <field name="founding" placeholder="Founding..."/>
                            <field name="phone" widget="phone" placeholder="Phone..."/>
                            <field name="fax" placeholder="Fax..."/>
                            <field name="address" placeholder="Address..."/>
                        </group>
                        <group>
                            <field name="email" widget="email" placeholder="Email 1...."/>
                            <field name="email" widget="email" placeholder="Email 2"/>
                            <field name="website2" widget="url" placeholder="Website..."/>
                            <field name="facebook" widget="url" placeholder="e.g facebook.com..."/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Books">
                            <group>
                                <field name="book_ids" widget="many2many_tags" readonly="1"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <group>
                                <field name="note" placeholder="Note" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_kanban_publisher" model="ir.ui.view">
        <field name="name">view.kanban.publisher</field>
        <field name="model">library.publisher</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name"/>
                <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Avatar"
                                         t-att-src="kanban_image('library.publisher',
                                         'publisher_image',record.id.raw_value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                        <h6>
                                            <a>
                                                <field name="name_seq" />
                                            </a>
                                        </h6>
                                    <strong><h3 style="color:#7C7BAD"><field name="name"/></h3></strong>
                                    <!--<p style="padding-left: 10px"><field name="email"/></p>-->
                                    <!--<li style="padding-left: 10px">Email: <field name="email"/></li>-->
                                    <!--<a style="padding-left: 10px"><field name="website"/></a>-->
                                </div>
                            </div>
                        </t>
                    </templates>
            </kanban>
        </field>
    </record>
</odoo>