<odoo>
    <!--inherit search res.lang-->
    <record id="view_search_inherit_res_lang" model="ir.ui.view">
        <field name="name">view.search.inherit.res.lang</field>
        <field name="model">res.lang</field>
        <field name="inherit_id" ref="base.res_lang_search"/>
        <field name="arch" type="xml">
            <search>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!--form view for library rack-->
    <record id="view_form_rack" model="ir.ui.view">
        <field name="name">view.form.rack</field>
        <field name="model">library.rack</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="expense_button_box">
                        <button name="toggle_active"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <field name="name" />
                        <field name="code" />
                        <field name="book_ids" widget="many2many_tags"/>
                        <!--<field name="active" widget="boolean_toggle"/>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View Of Library Rack -->
    <record id="view_tree_rack" model="ir.ui.view">
        <field name="name">view.tree.rack</field>
        <field name="model">library.rack</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="code" />
                <field name="book_ids" widget="many2many_tags"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!--search view for library rack-->
    <record id="view_search_rack" model="ir.ui.view">
        <field name="name">view.search.rack</field>
        <field name="model">library.rack</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="code" />
                <field name="active" />
            </search>
        </field>
    </record>

    <record id="view_tree_book" model="ir.ui.view">
        <field name="name">view.tree.book</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name_seq"/>
                <field name="name"/>
                <field name="category"/>
                <field name="book_type"/>
                <field name="language"/>
                <field name="publisher_id"/>
                <field name="author_ids" widget="many2many_tags"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_form_book" model="ir.ui.view">
        <field name="name">view.form.book</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name_seq" style="font-size: 24px; color:gray" /> -
                            <field name="name"
                                   placeholder="Book Name"
                                   nolabel="1"
                                   style="color:#7C7BAD"
                                   class="o_text_overflow"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Book Information">
                            <group col="4" colspan="4">
                                <group col="2" colspan="2" string="Image Book">
                                    <field name="image" widget="image" style="width:60px;height:70px"/>
                                </group>
                                <group col="2" colspan="2">
                                    <separator string="Information Book" col="2" colspan="4"/>
                                    <group colspan="2">
                                        <field name="category"/>
                                        <field name="published_date" placeholder="Enter publish date... "/>
                                        <field name="publisher_id" placeholder="Enter Publisher... "/>
                                        <field name="author_ids"
                                               placeholder="Choose Author... "
                                               widget="many2many_tags"
                                               required="1"/>
                                        <field name="translator_ids"
                                               placeholder="Choose Translator... "
                                               widget="many2many_tags"/>
                                    </group>
                                </group>
                            </group>
                            <group string="Details">
                                <!--<separator string="Others"/>-->
                                <group>
                                    <field name="book_type"/>
                                    <field name="num_page" placeholder="Enter Num Page...."/>
                                    <field name="rack" placeholder="Choose Library Rack..." required="1"/>
                                    <field name="quantity"/>
                                    <field name="remaining"/>
                                </group>
                                <group>
                                    <field name="currency_id" groups="base.group_no_one" placeholder="Choose Currency..."/>
                                    <!-- class="oe_edit_only"-->
                                    <field name="price" placeholder="Enter Price..."/>
                                    <field name="language" placeholder="Choose Language..."/>
                                    <field name="active"/>
                                </group>
                            </group>

                        </page>
                        <page string="Meta Books" >
                            <field name="meta_book_ids">
                                <tree editable="bottom" decoration-danger="state == 'not_available'"
                                      decoration-success="state == 'available'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name_seq" readonly="1"/>
                                    <field name="description"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_kanban_book" model="ir.ui.view">
        <field name="name">view.kanban.book</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban
                    quick_create="false" group_create="false">
                <field name="color"/>
                <field name="id"/>
                <field name="name"/>
                <!--<field name="is_available"/>-->
                <templates>
                    <t t-name="kanban-box">
                        <!--<t t-set="color"
                           t-value="kanban_color(record.color.raw_value ||
                           record.book_name.raw_value)"/>-->
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="Avatar" style="height:70px;width:50px;"
                                     t-att-src="kanban_image('library.book', 'image',record.id.raw_value)"/>
                            </div>
                            <!--<div class="o_dropdown_kanban dropdown">
                              &lt;!&ndash; Top-right drop down menu here... &ndash;&gt;
                                <a class="dropdown-toggle btn"
                                    data-toggle="dropdown" role="button"
                                    aria-label="Dropdown menu"
                                    title="Dropdown menu"
                                    href="#">
                                  <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    &lt;!&ndash;<ul class="oe_kanban_colorpicker" data-field="color"/>&ndash;&gt;
                                </div>
                            </div>-->
                             <div class="oe_kanban_details">
                                <strong>
                                    <a type="open" class="o_text_overflow">
                                        <field name="name"/>
                                    </a>
                                </strong>
                                <ul>
                                    <li>Book ID: <field name="name_seq" /></li>
                                    <!--<li class="o_text_overflow">Publisher: <field name="publisher_id" /></li>
                                    --><t t-set="red_or_black"
                                       t-value="record.state.raw_value == 'not_available' ?
                                       'oe_kanban_text_red': '' "/>
                                    <li t-att-class="red_or_black">
                                       <field name="state"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_search_book" model="ir.ui.view">
       <field name="name">view.search.book</field>
       <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name_seq" string="Book ID"/>
                <field name="name" string="Book Name"/>
                <filter name="state" string="Available" domain="[('state', '=', 'available')]"/>
                <filter name="state" string="Not Available" domain="[('state', '=', 'not_available')]"/>
                <filter name="publisher_id" string="Publisher" context="{'group_by':'publisher_id'}"/>
                <filter name="category" string="Category abc" context="{'group_by':'category'}"/>
            </search>
        </field>
    </record>

    <record id="view_tree_meta_books" model="ir.ui.view">
        <field name="name">view.tree.meta.books</field>
        <field name="model">meta.books</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state == 'not_available'"
                  decoration-success="state == 'available'">
                <field name="name_seq"/>
                <field name="book_id"/>
                <field name="description"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_form_meta_books" model="ir.ui.view">
        <field name="name">view.form.meta.books</field>
        <field name="model">meta.books</field>
        <field name="arch" type="xml">
           <form>
               <sheet>
                   <div class="oe_title">
                           <label for="name_seq" class="oe_edit_only"/>
                           <h1>
                               <field name="name_seq"/>
                           </h1>
                       </div>
                   <group>
                       <group>
                           <field name="book_id"/>
                           <field name="state"/>
                       </group>
                       <group>
                           <field name="description"/>
                       </group>
                   </group>
               </sheet>
           </form>
        </field>
    </record>
</odoo>