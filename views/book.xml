<odoo>
    <record id="view_tree_book" model="ir.ui.view">
        <field name="name">view.tree.book</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name_seq"/>
                <field name="name"/>
                <field name="category"/>
                <field name="book_type"/>
                <field name="language"/>
                <field name="publisher_id"/>
                <field name="author_ids" widget="many2many_tags"/>
                <!--<field name="is_available"/>-->
            </tree>
        </field>
    </record>

    <record id="view_form_book" model="ir.ui.view">
        <field name="name">view.form.book</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name_seq" style="font-size: 24px; color:gray" /> -
                            <field name="name"
                                   placeholder="Book Name"
                                   nolabel="1"
                                   style="color:#7C7BAD"
                                   class="o_text_overflow"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Book Information">
                            <group col="4" colspan="4">
                        <group col="2" colspan="2" string="Image Book">
                            <field name="image" widget="image"/>
                        </group>
                        <group col="2" colspan="2">
                            <separator string="Information Book" col="2" colspan="4"/>
                            <group colspan="2">
                                <field name="category"/>
                                <field name="isbn"/>
                                <field name="published_date"/>
                                <field name="publisher_id"/>
                                <field name="author_ids"
                                       widget="many2many_tags"
                                       required="1"/>
                                <field name="book_type"/>
                                <field name="num_page"/>
                            </group>
                            <separator string="Others"/>
                            <group colspan="4">
                                <field name="quantity"/>
                                <field name="remaining"/>
                                <field name="currency_id" groups="base.group_no_one"/>
                                <!-- class="oe_edit_only"-->
                                <field name="price"/>
                                <field name="language"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </group>
                        </page>
                        <page string="Meta Books">
                            <field name="meta_book_ids">
                                <tree editable="bottom" decoration-danger="state == 'not_available'"
                                      decoration-success="state == 'available'">
                                    <field name="name_seq"/>
                                    <field name="description"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="view_kanban_book" model="ir.ui.view">
        <field name="name">view.kanban.book</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban
                    quick_create="false" group_create="false">
                <field name="color"/>
                <field name="id"/>
                <field name="name"/>
                <!--<field name="is_available"/>-->
                <templates>
                    <t t-name="kanban-box">
                        <!--<t t-set="color"
                           t-value="kanban_color(record.color.raw_value ||
                           record.book_name.raw_value)"/>-->
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="Avatar" style="height:70px;width:50px;"
                                     t-att-src="kanban_image('library.book', 'image',record.id.raw_value)"/>
                            </div>
                            <!--<div class="o_dropdown_kanban dropdown">
                              &lt;!&ndash; Top-right drop down menu here... &ndash;&gt;
                                <a class="dropdown-toggle btn"
                                    data-toggle="dropdown" role="button"
                                    aria-label="Dropdown menu"
                                    title="Dropdown menu"
                                    href="#">
                                  <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    &lt;!&ndash;<ul class="oe_kanban_colorpicker" data-field="color"/>&ndash;&gt;
                                </div>
                            </div>-->
                             <div class="oe_kanban_details">
                                <strong>
                                    <a type="open" class="o_text_overflow">
                                        <field name="name"/>
                                    </a>
                                </strong>
                                <ul>
                                    <li>Book ID: <field name="name_seq" /></li>
                                    <li class="o_text_overflow">Publisher: <field name="publisher_id" /></li>
                                    <t t-set="red_or_black"
                                       t-value="record.state.raw_value == 'not_available' ?
                                       'oe_kanban_text_red': '' "/>
                                    <li t-att-class="red_or_black">
                                        <field name="state"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_search_book" model="ir.ui.view">
       <field name="name">view.search.book</field>
       <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name_seq" string="Book ID"/>
                <field name="name" string="Book Name"/>
                <filter name="state" string="Available" domain="[('is_available', '=', 'available')]"/>
                <filter name="state" string="Not Available" domain="[('is_available', '=', 'not_available')]"/>
                <filter name="publisher_id" string="Publisher" context="{'group_by':'publisher_id'}"/>
                <filter name="category" string="Category abc" context="{'group_by':'category'}"/>
            </search>
        </field>
    </record>

    <record id="view_tree_meta_books" model="ir.ui.view">
        <field name="name">view.tree.meta.books</field>
        <field name="model">meta.books</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state == 'not_available'"
                  decoration-success="state == 'available'">
                <field name="name_seq"/>
                <field name="book_id"/>
                <field name="description"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_form_meta_books" model="ir.ui.view">
        <field name="name">view.form.meta.books</field>
        <field name="model">meta.books</field>
        <field name="arch" type="xml">
           <form>
               <sheet>
                   <div class="oe_title">
                           <label for="name_seq" class="oe_edit_only"/>
                           <h1>
                               <field name="name_seq"/>
                           </h1>
                       </div>
                   <group>
                       <group>
                           <field name="book_id"/>
                           <field name="state"/>
                       </group>
                       <group>
                           <field name="description"/>
                       </group>
                   </group>
               </sheet>
           </form>
        </field>
    </record>
</odoo>