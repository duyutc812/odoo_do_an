<odoo>
    <record id="open_checkout_card" model="ir.actions.act_window">
        <field name="name">Open checkout Card</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">library.checkout</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('card_id', '=', active_id),
                              ('state', '=', 'running')]</field>
    </record>

    <record id="view_form_card" model="ir.ui.view">
        <field name="name">view.form.card</field>
        <field name="model">library.card</field>
        <field name="arch" type="xml">
            <form string="Card Details">
                <header>
                    <!--<button name="check_" type="object" string="ObjectButton"/>-->
                    <field name="state" invisible="1"/>
                    <button name="running_state"
                            icon="fa-check"
                            type="object"
                            string="Confirm"
                            attrs="{'invisible':[('state', '!=', 'draft')]}" class="oe_highlight"/>
                            <!--groups="library.group_librarian" -->

                    <!--<button name="expire_state"
                            type="object"
                            string="Expire"
                            attrs="{'invisible':[('state', '!=', 'running')]}" class="oe_highlight"/>-->

                    <button name="print_report" type="object" string="Print Report" class="oe_highlight"
                            attrs="{'invisible':[('state', '!=', 'running')]}"/>
                    <button name="send_email" type="object" string="Send Email"
                            attrs="{'invisible':[('state', '!=', 'running')]}"/>
                    <!--<button name="delete_state" type="object" string="Delete Card" class="oe_highlight"/>
                            &lt;!&ndash;groups="library.group_librarian"&ndash;&gt;-->
                    <button name="penalty_card"
                            type="object"
                            string="Penalty"
                            attrs="{'invisible':['|', ('state', '!=', 'running'), ('is_penalty', '=', True)]}"/>
                    <button name="cancel_penalty_card"
                            type="object"
                            string="Cancel Penalty"
                            attrs="{'invisible':['|', ('state', '!=', 'running'), ('is_penalty', '=', False)]}"/>
                    <field name="stage_id" widget="statusbar"/> <!-- clickable="True"-->
                </header>
                <sheet>
                    <div class="oe_button_box" name="expense_button_box">
                        <button name="%(open_checkout_card)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-bars"
                                attrs="{'invisible': [('state', '!=', 'running')]}">
                                <field name="chk_card" string="Checkout's" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <label for="code" string="Card ID: " class="oe_edit_only"/>
                            <field name="code" style="color:#7C7BAD"/>
                        </h1>
                    </div>
                    <group col="2" colspan="4">
                        <group string="Card Details">
                           <!-- <separator string="Card Details"/>-->
                            <field name="user" required="1" attrs="{'readonly':[('state','!=','draft')]}" />
                            <field name="book_limit" readonly="1"/>
                            <field name="book_limit_syllabus" readonly="1" string="No of Syllabus"/>
                            <field name="student_id" attrs="{'invisible':[('user','!=','student')],
                                                             'readonly':[('state', '!=', 'draft')]}"
                                   options="{'no_create_edit': True}"/>
                            <field name="teacher_id" attrs="{'invisible':[('user','!=','teacher')],
                                                             'readonly':[('state', '!=', 'draft')]}"
                                   options="{'no_create_edit': True}"/>
                            <field name="email" readonly="1" force_save="1"/>
                        </group>
                        <group string="Others" >
                            <!--<separator string="Others" />-->
                            <field name="start_date" required="1"
                                   options="{'datepicker': {'warn_future': true, 'daysOfWeekDisabled': [0]}}"
                                   /><!--options='{"datepicker": {"daysOfWeekDisabled": [0]}}'-->
                            <!--attrs="{'readonly':['|', ('state','!=','draft'), ('user', '=', 'teacher')]}" -->
                            <field name="duration" required="1"
                                   attrs="{'readonly':['|', ('state','!=','draft'), ('user', '=', 'teacher')]}"
                                   force_save="1"/>
                            <field name="end_date"/>
                            <field name="price" readonly="1" attrs="{'invisible': [('price', '=', 0)]}"/>
                            <!--attrs="{'readonly':['|', ('state','!=','draft'), ('user', '=', 'teacher')]}"/>-->
                        </group>
                    </group>
                    <group string="Penalty" attrs="{'invisible':[('is_penalty', '=', False)]}">
                        <field name="is_penalty"/>
                        <field name="duration_penalty"/>
                        <field name="end_date_penalty"/>
                    </group>
                </sheet>
                <!-- mail mixin fields -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_card" model="ir.ui.view">
        <field name="name">view.tree.card</field>
        <field name="model">library.card</field>
        <field name="arch" type="xml">
            <tree string="Card Details"
                  decoration-muted="state=='draft'"
                  decoration-danger="state=='expire'"
                  decoration-success="state=='running'">
                <field name="code" />
                <field name="user" />
                <field name="book_limit" />
                <field name="book_limit_syllabus" />
                <field name="gt_name" />
                <field name="end_date" />
                <field name="price" sum="Total price Card"/>
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_search_card" model="ir.ui.view">
        <field name="name">view.search.card</field>
        <field name="model">library.card</field>
        <field name="arch" type="xml">
            <search>
                <field name="code" string="Code"/>
                <field name="student_id" string="Student ID"/>
                <field name="teacher_id" string="Teacher ID"/>
                <filter name="user" string="Teacher" domain="[('user', '=', 'teacher')]"/>
                <filter name="user" string="Student" domain="[('user', '=', 'student')]"/>
            </search>
        </field>
    </record>

    <record id="view_kanban_card" model="ir.ui.view">
        <field name="name">view.kanban.card</field>
        <field name="model">library.card</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id"
                    quick_create="false"
                    group_create="false">
                <field name="code"/>
                <field name="id"/>
                <field name="user"/>
                <field name="state"/>
                <field name="book_limit"/>
                <field name="book_limit_syllabus"/>
                <field name="end_date"/>
                <field name="duration"/>
                <field name="is_penalty"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <!-- Top-right drop down menu here... -->
                                <a class="dropdown-toggle btn" data-toggle="dropdown" role="button" aria-label="Dropdown menu" title="Dropdown menu" href="#">
                                  <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="record.state.raw_value=='running'">
                                        <div role="menuitem">
                                            <a name="print_report" type="object" class="dropdown-item">Report</a>
                                        </div>
                                    </t>
                                    <t t-if="record.state.raw_value=='draft'">
                                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    </t>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <strong>
                                    <h6>
                                        <a type="open" class="o_text_overflow">
                                            <field name="code" /> -
                                            <field name="gt_name"/>
                                            <t t-if="record.is_penalty.raw_value">
                                                <span style="color:red; font-size:11px">(Punishment)</span>
                                            </t>
                                        </a>
                                    </h6>
                                </strong>
                                <table style="font-size:10px">
                                    <tr><th>User: </th>
                                        <t t-set="red_or_black"
                                           t-value="record.user.raw_value =='teacher'
                                           ? 'oe_kanban_text_red' : ''" />
                                            <td t-att-class="red_or_black">
                                                <field name="user" />
                                            </td>
                                    </tr>
                                    <tr>
                                        <th>Duration: </th>
                                        <t t-if="record.duration.raw_value=='6'">
                                            <td>
                                                <strong><field name="duration"/></strong>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td>
                                                <field name="duration"/>
                                            </td>
                                        </t>
                                    </tr>
                                    <tr>
                                        <th>Date: </th>
                                        <td><field name="start_date"/> - <field name="end_date"/></td>
                                    </tr>
                                    <tr>
                                        <th>Limit Book: </th>
                                        <td><field name="book_limit"/>(Book) and
                                            <field name="book_limit_syllabus"/>(Syllabus)
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>
                    <searchpanel>
                        <!--<field name="user" string="User"/>-->
                        <field name="student_id" string="Student" icon="fa-tags" select="multi"/>
                        <field name="teacher_id" string="Teacher"/>
                    </searchpanel>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_calendar_card" model="ir.ui.view">
        <field name="name">view.calendar.card</field>
        <field name="model">library.card</field>
        <field name="arch" type="xml">
            <calendar string="Card Calendar" date_start="start_date"
                      mode="month" quick_add="False" color="gt_name">
                <field name="code"/>
                <field name="gt_name"/>
            </calendar>
        </field>
    </record>

