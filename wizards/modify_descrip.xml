<odoo>
    <data>
        <act_window id="action_wizard_modify_descrip"
                    name="Modify Description"
                    res_model="modify.description"
                    view_type="form"
                    view_mode="form"
                    target="new" multi="False"
        />

        <record  id="wizard_descrip_form" model="ir.ui.view">
            <field name="name">wizard.description.form</field>
            <field name="model">modify.description</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="mgz_new_id"/>
                        <field name="meta_mgz_new_id"/>
                        <field name="status_document"/>
                    </group>
                    <footer>
                        <button type="object"
                                name="button_update_description"
                                string="Update"
                                class="btn-primary"
                                />
                        <button special="cancel"
                        string="Cancel"
                        class="btn-secondary" />
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>