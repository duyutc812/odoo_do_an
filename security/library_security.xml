<?xml version="1.0" ?>
<odoo>
    <record id="module_library_category" model="ir.module.category">
       <field name="name">Library Management</field>
        <field name="sequence">100</field>
    </record>

    <record id="library_group_librarian" model="res.groups">
        <field name="name">Librarian</field>
        <field name="category_id"
               ref="module_library_category"/>
        <field name="implied_ids"
               eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="library_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id"
               ref="module_library_category"/>
        <field name="implied_ids"
               eval="[(4, ref('library_group_librarian'))]"/>
        <field name="users"
               eval="[(4, ref('base.user_root')),
                      (4, ref('base.user_admin'))]"/>
    </record>

    <record id="library_member_search" model="res.groups">
        <field name="name">Member Search</field>
        <field name="category_id" ref="module_library_category"/>
        <field name="implied_ids"
               eval="[(4, ref('base.group_user'))]"/>
    </record>

    <data noupdate="0">
        <record id="library_author_librarian_rule" model="ir.rule">
            <field name="name">Library Author Librarian Access</field>
            <field name="model_id" ref="model_library_author"/>
            <field name="domain_force">
                [('active', '=', True)]
            </field>
            <field name="groups" eval="[(4,ref('library_group_librarian'))]"/>
        </record>
    </data>

    <data noupdate="0">
        <record id="library_author_manager_rule" model="ir.rule">
            <field name="name">Library Author Manager Access</field>
            <field name="model_id" ref="model_library_author"/>
            <field name="domain_force">
                [('active', '=', False)]
            </field>
            <field name="groups" eval="[(4, ref('library_group_manager'))]"/>
        </record>
    </data>

    <data noupdate="0">
        <record id="library_card_librarian_rule" model="ir.rule">
            <field name="name">Library Card Librarian Access</field>
            <field name="model_id" ref="model_library_card"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('library_group_librarian'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="library_card_manager_rule" model="ir.rule">
            <field name="name">Library Card Manager Access</field>
            <field name="model_id" ref="model_library_card"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('library_group_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
    </data>



