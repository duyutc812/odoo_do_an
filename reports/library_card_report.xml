<odoo>
    <report
        id="action_library_card_detail"
        model="library.card"
        report_type="qweb-html"
        menu="False"
        string="Card Report"
        name="do_an_tn.report_card_detail_template"/>

    <template id="report_card_detail_template">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="row">
                            <center>
                                <div class="col-xs-8" style="margin:auto">
                                    <table style="border: 3px solid black !important;width:550px;height:300px" >
                                        <tr style="text-align:center;">
                                            <td><h3 style="color:#24d9e3">University of Communications and Transport</h3></td>
                                        </tr>
                                        <tr style="text-align:center;">
                                            <td >
                                                <h4 style="color:red">Library Card</h4>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding-left:150px;">
                                                <table>
                                                    <tr>
                                                        <th style="text-align:left;">
                                                            <t t-if="o.user=='student'">
                                                                <p>Student: </p>
                                                                <p>Student ID: </p>
                                                                <p>Major: </p>
                                                                <p>Course: </p>
                                                                <!--<p>Student ID: </p>-->
                                                            </t>
                                                            <t t-if="o.user=='teacher'">
                                                                <p>Teacher: </p>
                                                                <p>Role: </p>
                                                            </t>
                                                            <p>Duration: </p>
                                                            <p>End Date: </p>
                                                        </th>
                                                        <td style="text-align:center;padding-left:10px;">
                                                            <t t-if="o.student_id">
                                                                <p t-field="o.student_id.name"/>
                                                                <p t-field="o.student_id.student_id"/>
                                                                <p t-field="o.student_id.major"/>
                                                                <p t-field="o.student_id.course"/>
                                                            </t>
                                                            <t t-if="o.teacher_id">
                                                                <p t-field="o.teacher_id.name"/>
                                                                <p t-field="o.teacher_id.role"/>
                                                            </t>
                                                            <p t-field="o.duration"/>
                                                            <p t-field="o.end_date"/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </center>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>