<odoo>
    <report
        id="action_library_card_detail"
        model="library.card"
        report_type="qweb-html"
        string="Card Report"
        name="do_an_tn.report_card_detail_template"/>

    <template id="report_card_detail_template">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="row">
                            <center style="width:600px;height:600px">
                                <div class="col-xs-8" style="margin:auto">
                                    <table style="border: 3px solid black !important;">
                                        <tr style="text-align:center;">
                                            <td><h2><strong><span t-field="o.code"/></strong></h2></td>
                                        </tr>
                                        <tr>
                                            <td width="100%">
                                                <table>
                                                    <tr>
                                                        <td>
                                                            <p style="text-align:right;"><strong>User: </strong></p>
                                                            <p style="text-align:right;"><strong>Student: </strong></p>
                                                            <p style="text-align:right;"><strong>Limit Book: </strong></p>
                                                            <p style="text-align:right;"><strong>Start Date: </strong></p>
                                                            <p style="text-align:right;"><strong>Duration: </strong></p>
                                                            <p style="text-align:right;"><strong>End Date: </strong></p>
                                                        </td>
                                                        <td>
                                                            <p style="text-align:center;padding-left:10px;" t-field="o.user"/>
                                                            <p style="text-align:center;padding-left:10px;" t-field="o.gt_name"/>
                                                            <p style="text-align:center;padding-left:10px;" t-field="o.book_limit"/>
                                                            <p style="text-align:center;padding-left:10px;" t-field="o.start_date"/>
                                                            <p style="text-align:center;padding-left:10px;" t-field="o.duration"/>
                                                            <p style="text-align:center;padding-left:10px;" t-field="o.end_date"/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </center>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>