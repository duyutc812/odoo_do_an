<odoo>
    <report
        id="action_library_card_detail"
        model="library.card"
        report_type="qweb-html"
        string="Card Report"
        name="do_an_tn.report_card_detail_template"/>

    <template id="report_card_detail_template">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="row">
                            <center>
                                <div class="col-xs-8" style="margin:auto">
                                    <table style="border: 3px solid black !important;width:550px;height:300px" >
                                        <tr style="text-align:center;">
                                            <td><h3 style="color:#24d9e3">University of Communications and Transport</h3></td>
                                        </tr>
                                        <tr style="text-align:center;">
                                            <td >
                                                <h4 style="color:red">Library Card</h4>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding-left:150px;">
                                                <table>
                                                    <tr>
                                                        <td>
                                                            <p style="text-align:left;"><strong>User: </strong></p>
                                                            <p style="text-align:left;"><strong>Student: </strong></p>
                                                            <p style="text-align:left;"><strong>Limit Book: </strong></p>
                                                            <p style="text-align:left;"><strong>Duration: </strong></p>
                                                            <p style="text-align:left;"><strong>End Date: </strong></p>
                                                        </td>
                                                        <td>
                                                            <p style="text-align:center;padding-left:10px;"
                                                               t-field="o.user"/>
                                                            <p style="text-align:center;padding-left:10px;"
                                                               t-field="o.gt_name"/>
                                                            <p style="text-align:center;padding-left:10px;"
                                                               t-field="o.book_limit"/>
                                                            <p style="text-align:center;padding-left:10px;"
                                                               t-field="o.duration"/>
                                                            <p style="text-align:center;padding-left:10px;"
                                                               t-field="o.end_date"/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </center>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>