    <report
        id="action_library_checkout_report"
        model="library.checkout"
        report_type="qweb-html"
        string="Checkout Report"
        name="do_an_tn.report_library_checkout_template"/>
        <!--paperformat="paperformat_euro_landscape"-->


    <template id="report_library_checkout_template">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <!--<h>abc</h>-->
                    <div class="container">
                        <h1 style="text-align:center">Library Of University of Transport and Communications</h1>
                        <br/>
                        <div class="row bg-primary">
                            <div class="col-1">ID</div>
                            <div class="col-3">Card No</div>
                            <div class="col-2">Request Date</div>
                            <div class="col-4">Book Name</div>
                            <div class="col-2">Librarian</div>
                        </div>

                        <t t-set="checkout_count" t-value="0"/>

                        <t t-foreach="docs" t-as="o">
                            <div class="row" style="padding-top:6px">
                                <div class="col-1">
                                    <h6 style="font-size:14px;padding-top:4px"><span t-field="o.name_seq"/></h6>
                                </div>
                                <div class="col-3">
                                    <span t-field="o.card_id"/>
                                </div>
                                <div class="col-2">
                                    <span t-field="o.request_date"/>
                                </div>
                                <div class="col-4">
                                    <span t-field="o.borrow_book"/>
                                </div>
                                <div class="col-2">
                                    <span t-field="o.user_id"/>
                                </div>
                            </div>
                            <t t-set="checkout_count"
                               t-value="checkout_count + 1">
                            </t>
                            <!--<p t-field="o.card_id.start_date"/>
                            <p t-field="o.card_id.book_limit"/>-->
                        </t>
                        <br/>
                        <h4>No Borrowed Book : <t t-esc="checkout_count"/></h4>
                         <!--<p t-field="o.card_id.start_date"/>-->
                         <!--<p t-field="o.card_id.end_date"/>-->
                    </div>

                </div>
            </t>
        </t>
    </template>

    <report
        id="action_library_card_detail"
        model="library.card"
        report_type="qweb-html"
        string="Card Report"
        name="do_an_tn.report_card_detail_template"/>

    <template id="report_card_detail_template">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="row">
                            <center>
                                <div class="col-xs-8" style="margin:auto">
                                    <table class="table table-condensed" style="border: 3px solid black !important;">
                                        <tr style="text-align:center;">
                                            <td><h2><strong><span t-field="o.code"/></strong></h2></td>
                                        </tr>
                                        <tr>
                                            <!--<td width="40%">
                                                    &lt;!&ndash;<p style="text-align:center;padding-top:10px;">
                                                        <img t-if="not o.image" t-att-src="'/web/static/src/img/placeholder.png'" height="120" border="1" width="120"/>
                                                        <img t-if="o.image" t-att-src="'data:image/png;base64,%s' % to_text(o.image)" height="120" border="1" width="120"/>
                                                    </p>&ndash;&gt;
                                                <p style="text-align:center;">
                                                    <h2><strong><span t-field="o.code"/></strong></h2>
                                                </p>
                                            </td>-->
                                            <td width="100%">
                                                <table>
                                                    <tr>
                                                        <td>
                                                            <p style="text-align:right;"><strong>User: </strong></p>
                                                            <p style="text-align:right;"><strong>Student: </strong></p>
                                                            <p style="text-align:right;"><strong>Limit Book: </strong></p>
                                                            <p style="text-align:right;"><strong>Start Date: </strong></p>
                                                            <p style="text-align:right;"><strong>Duration: </strong></p>
                                                            <p style="text-align:right;"><strong>End Date: </strong></p>
                                                        </td>
                                                        <td>
                                                            <p style="text-align:left;padding-left:10px;" t-field="o.user"/>
                                                            <p style="text-align:left;padding-left:10px;" t-field="o.gt_name"/>
                                                            <p style="text-align:left;padding-left:10px;" t-field="o.book_limit"/>
                                                            <p style="text-align:left;padding-left:10px;" t-field="o.start_date"/>
                                                            <p style="text-align:left;padding-left:10px;" t-field="o.duration"/>
                                                            <p style="text-align:left;padding-left:10px;" t-field="o.end_date"/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </center>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>